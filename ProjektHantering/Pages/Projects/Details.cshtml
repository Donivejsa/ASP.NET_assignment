@page "{id:int}"
@using static ProjektHantering.Models.Project
@model ProjektHantering.Pages.Projects.DetailsModel
@{
    ViewData["Title"] = "Projektdetaljer";
}

<div class="container">
    <h1>Projektdetaljer</h1>

    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h3 class="mb-0">@Model.Project.Name</h3>
            <span class="badge @(Model.Project.Status == ProjectStatus.InProgress ? "bg-primary" : "bg-success")">
                @(Model.Project.Status == ProjectStatus.InProgress ? "Pågående" : "Slutförd")
            </span>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-3 fw-bold">Beskrivning:</div>
                <div class="col-md-9">@Model.Project.Description</div>
            </div>
            <div class="row mb-3">
                <div class="col-md-3 fw-bold">Startdatum:</div>
                <div class="col-md-9">@Model.Project.StartDate.ToString("yyyy-MM-dd")</div>
            </div>
            @if (Model.Project.EndDate.HasValue)
            {
                <div class="row mb-3">
                    <div class="col-md-3 fw-bold">Slutdatum:</div>
                    <div class="col-md-9">@Model.Project.EndDate.Value.ToString("yyyy-MM-dd")</div>
                </div>
            }
        </div>
        <div class="card-footer">
            <a asp-page="./Edit" asp-route-id="@Model.Project.Id" class="btn btn-primary">Redigera</a>
            <a asp-page="./Index" class="btn btn-secondary">Tillbaka till listan</a>
        </div>
    </div>
</div>